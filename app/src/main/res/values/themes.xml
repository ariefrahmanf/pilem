<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pilem" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_40</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_40_container</item>
        <item name="colorOnPrimaryContainer">@color/blue_40_on_container</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_60</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryContainer">@color/blue_60_container</item>
        <item name="colorOnSecondaryContainer">@color/blue_60_on_container</item>

        <item name="colorTertiary">@color/blue_80</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorTertiaryContainer">@color/blue_80_container</item>
        <item name="colorOnTertiaryContainer">@color/blue_80_on_container</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- textappearance Body-->
        <item name="textAppearanceBodySmall">@style/TextAppearancePilem.BodySmall</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearancePilem.BodyMedium</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearancePilem.BodyLarge</item>

        <!-- textappearance Title-->
        <item name="textAppearanceTitleLarge">@style/TextAppearancePilemBold.TitleLarge</item>

        <!-- textappearance Headline -->
        <item name="textAppearanceHeadlineSmall">@style/TextAppearancePilemBold.HeadlineSmall</item>
    </style>
</resources>